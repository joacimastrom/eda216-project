<% provide(:title, 'All pallets') %>


<h1>Listing pallets</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pallet.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        
        <td><%= link_to 'Show', c %></td>
        <td><%= link_to 'Edit', edit_cooky_path(c) %></td>
        <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>