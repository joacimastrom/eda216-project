<% provide(:title, 'Add cookie') %>
<h1>Specify order</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pallet) do |f| %>
    
    <%= f.label :cookie %>
    <%= f.collection_select :cookie_id, Cookie.all, :id, :name, class: 'form-control' %>

    <%= f.label :order %>
    <%= f.number_field :order_id, class: 'form-control' %>


    <%= f.submit "Complete cookie order", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>