<% provide(:title, 'Storage') %>


<h1>All ingredients in store</h1>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
    <br>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Last Delivery</th>
      <th>Amount Delivered</th>
      <th>New order</th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |i| %>
      <tr>
        <td><%= i.name %></td>
        <td><%= i.quantity %></td>
        <td><%= i.updated_at.to_date %></td>
        <td><%= i.amount_delivered %></td>
        <%= form_for(i) do |f| %>

          <td><%= f.number_field :amount_delivered, value: 0, class: 'form-control' %></td>

          <td><%= f.submit "Restock", class: "btn btn-primary" %></td>
        <% end %>
      

      </tr>
    <% end %>
  </tbody>
</table>
