<% provide(:title, @cookie.name) %>


<h1>Listing ingredients</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cookie_recipe.each do |r| %>
      <tr>
        <td><%= (@ingredients.find_by(id: r.ingredient_id)).name %></td>
        <td><%= r.quantity %></td>  

        <td><%= link_to 'Edit', edit_recipe_path(r) %></td>
        <td><%= link_to 'Remove', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>