<% provide(:title, 'Begin order') %>
<h1>Begin order</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@order) do |f| %>
    
    <%= f.label :customer %>
    <%= f.collection_select :customer_id, Customer.all, :id, :name, class: 'form-control' %>
    <br>
    <%= f.label :requested_delivery_date %>
    <%= f.date_field :requested_delivery_date, class: 'form-control' %>


    <%= f.submit "Continue order", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>